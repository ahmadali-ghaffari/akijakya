<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Coctails</title>
    <link rel="stylesheet" type="text/css" href="static/style.css">
</head>
<body>
    <div class='page'>
        <h1>Coctails</h1>
        <div class='alcohols'>
            <a href='/'>All</a>
            <% alcoholList.forEach(function(item){ %>
            <a href='/?alcohol=<%= item %>'><%= item %></a>
            <% }); %>
        </div>
        <div class='menu'>
            <div class='list name'>
                <ul>
                    <li class='menu-header'>Name</li>
                    <% cocktails.forEach(function(item, index){ %>
                    <li class='coctail-names'><%= item.name %></li>
                    <% }); %>
                </ul>
            </div>
            <div class='list price'>
                    <ul>
                        <li class='menu-header'>Price</li>
                        <% cocktails.forEach(function(item){ %>
                        <li class='coctail-prices'><strong><%= item.price %></strong> Ft</li>
                        <% }); %>
                    </ul>
                </div>
        </div>
    </div> 
    <script>
        let listElementsNames = document.getElementsByClassName('coctail-names');
        let listElementsPrices = document.getElementsByClassName('coctail-prices');
        // listElements.forEach(function (e, i){
        //         e.className = 'light';
        // });
        for (let i = 0; i < listElementsNames.length; i++) {
                listElementsNames[i].className = 'dark';
        }
        for (let i = 0; i < listElementsPrices.length; i++) {
                listElementsPrices[i].className = 'dark';
        }
    </script> 
</body>
</html>